<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_box_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_box_level_1"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:text="@string/str_box_level_1"
                android:background="@drawable/icon_box_level_bg">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_box_level_2"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@color/color_white_50"
                android:text="@string/str_box_level_2"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_box_level_bg_noral">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_box_level_3"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@color/color_white_50"
                android:text="@string/str_box_level_3"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_box_level_bg_noral">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_box_level_4"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@color/color_white_50"
                android:text="@string/str_box_level_4"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_box_level_bg_noral">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_box_level_5"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@color/color_white_50"
                android:text="@string/str_box_level_5"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_box_level_bg_noral">

            </Button>

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_box_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ll_box_level"
        android:textSize="12sp"
        android:text="@string/str_Current"
        android:textColor="@color/color_white">

    </TextView>
    
    <ProgressBar
        android:id="@+id/pb_box"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="28dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@+id/tv_box_current">
    </ProgressBar>

    <TextView
        android:id="@+id/tv_box_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/pb_box"
        android:textSize="12sp"
        android:text="@string/str_Prize"
        android:textColor="@color/color_white">

    </TextView>


    <RelativeLayout
        android:id="@+id/rl_box_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_box_prize">


        <RelativeLayout
            android:id="@+id/rl_box_gift_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/dialog_box_gift_bg">


            <ImageView
                android:id="@+id/iv_box_gift_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_1">
            </ImageView>


            <TextView
                android:id="@+id/tv_box_gift_1"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_box_gift_2"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_box_gift_bg"
            android:layout_toRightOf="@+id/rl_box_gift_1">


            <ImageView
                android:id="@+id/iv_box_gift_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_2">
            </ImageView>


            <TextView
                android:id="@+id/tv_box_gift_2"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_box_gift_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_box_gift_bg"
            android:layout_toRightOf="@+id/rl_box_gift_2">


            <ImageView
                android:id="@+id/iv_box_gift_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_3">
            </ImageView>


            <TextView
                android:id="@+id/tv_box_gift_3"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_box_gift_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_box_gift_2"
            android:background="@drawable/dialog_box_gift_bg"
            android:layout_toRightOf="@+id/rl_box_gift_1">


            <ImageView
                android:id="@+id/iv_box_gift_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_4">
            </ImageView>

            <TextView
                android:id="@+id/tv_box_gift_4"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_box_gift_5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_box_gift_2"
            android:background="@drawable/dialog_box_gift_bg"
            android:layout_toRightOf="@+id/rl_box_gift_4">


            <ImageView
                android:id="@+id/iv_box_gift_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_5">
            </ImageView>

            <TextView
                android:id="@+id/tv_box_gift_5"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_box_gift_6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_box_gift_bg"
            android:layout_below="@+id/rl_box_gift_2"
            android:layout_toRightOf="@+id/rl_box_gift_5">


            <ImageView
                android:id="@+id/iv_box_gift_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_box_zuanshi"
                android:layout_above="@+id/tv_box_gift_6">
            </ImageView>

            <TextView
                android:id="@+id/tv_box_gift_6"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_box_zuanshi"
                android:textSize="9sp"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="111"
                android:textColor="@color/color_white">
            </TextView>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_box_send"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="12sp"
        android:drawablePadding="6dp"
        android:drawableLeft="@drawable/icon_box_send_left"
        android:drawableRight="@drawable/icon_box_send_right"
        android:layout_centerHorizontal="true"
        android:text="@string/str_box_send"
        android:textColor="@color/color_white">

    </TextView>


</RelativeLayout>